{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://inter-agent-bridge.dev/schemas/read-output.schema.json",
  "title": "Bridge Read Output",
  "type": "object",
  "additionalProperties": false,
  "required": ["agent", "source", "content", "warnings"],
  "properties": {
    "agent": {
      "type": "string",
      "enum": ["codex", "gemini", "claude", "cursor"]
    },
    "source": {
      "type": "string",
      "minLength": 1
    },
    "content": {
      "type": "string"
    },
    "warnings": {
      "type": "array",
      "items": { "type": "string" }
    },
    "session_id": {
      "type": ["string", "null"]
    },
    "cwd": {
      "type": ["string", "null"]
    },
    "timestamp": {
      "type": ["string", "null"],
      "format": "date-time"
    },
    "message_count": {
      "type": "integer",
      "minimum": 0
    },
    "messages_returned": {
      "type": "integer",
      "minimum": 0
    }
  }
}
