{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agent-bridge.dev/schemas/handoff.schema.json",
  "title": "Coordinator Handoff Packet",
  "type": "object",
  "additionalProperties": false,
  "required": ["mode", "task", "success_criteria", "sources"],
  "properties": {
    "mode": {
      "type": "string",
      "enum": ["verify", "steer", "analyze", "feedback"]
    },
    "task": {
      "type": "string",
      "minLength": 1
    },
    "success_criteria": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "sources": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["agent"],
        "anyOf": [
          {
            "required": ["session_id"],
            "properties": {
              "session_id": {
                "type": "string",
                "minLength": 1
              }
            }
          },
          {
            "required": ["current_session"],
            "properties": {
              "current_session": {
                "const": true
              }
            }
          }
        ],
        "properties": {
          "agent": {
            "type": "string",
            "enum": ["codex", "gemini", "claude", "cursor"]
          },
          "session_id": { "type": ["string", "null"] },
          "current_session": { "type": "boolean" },
          "cwd": { "type": "string" }
        }
      }
    },
    "constraints": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
